<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="CamRover.ControllerApp.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:CamRover.ControllerApp"
	xmlns:pages="clr-namespace:CamRover.ControllerApp.Pages"
	Shell.FlyoutBehavior="Disabled"
	Title="CamRover.ControllerApp">

	<ShellContent
		ContentTemplate="{DataTemplate local:ControlPage}"
		Route="Control" />

	<ShellContent
		ContentTemplate="{DataTemplate pages:SettingsPage}"
		Route="Settings" />

</Shell>
